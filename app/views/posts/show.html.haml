= link_to 'User info', show_profile_path(id="#{@post.user.id}")
%hr
= link_to 'ВКонтакте','#', class: ["goodshare", "socshare"], data: { type: "vk"}
= image_tag "icon-vk.png", class: ["goodshare", "socshare"], data: { type: 'vk',      text: @post.description, url: request.original_url}
%hr
%br
- unless @post.image_url.nil?
  = image_tag @post.image_url(:display)
%p
  %b Title:
  = @post.title
%p
  %b Description:
  = textilize(@post.description).html_safe
%p
  %b User:
  = @post.user.full_name

= form_for([@post, @post.comments.build], remote: true) do |f|

  %p
    = f.label :body
    = f.text_area :body
  %p
    - if can? :create, Comment
      = f.submit

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
%hr
%script{type: "text/javascript", src: "https://rawgit.com/iacmru/goodshare.js/master/goodshare-custom.js"}

/ %script type="text/javascript" src="https://rawgit.com/iacmru/goodshare.js/master/goodshare-custom.js"
=render 'comments'
