= link_to 'User info', show_profile_path(id="#{@post.user.id}")
%br
/ = image_tag @post.image.url(:medium)
%p
  %b Title:
  = @post.title
%p
  %b Description:
  = textilize(@post.description).html_safe
%p
  %b User:
  = @post.user.full_name

= form_for([@post, @post.comments.build], remote: true) do |f|

  %p
    = f.label :body
    = f.text_area :body
  %p
    = f.submit

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
%hr
=render 'comments'
