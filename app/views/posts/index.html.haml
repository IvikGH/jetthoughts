%h1 Listing posts
- if can? :create, Post
  = link_to 'New Post', new_post_path, id: "new_post"

%table
  %thead
    %tr
      %th Image
      %th Image
      %th User
      %th Title
      %th Description
      %th
      %th
      %th

  %tbody
    - unless @posts.empty?
      - @posts.each do |post|
        %tr
          %td= image_tag post.image.url(:thumbnail)
          / %td= cl_image_tag("icon_ajhucs.jpg", :transformation=>[{radius: "max", width: 100, height: 100, crop: :thumb}, {} ])
          %td= post.user.try(:full_name)
          %td= post.title
          %td= post.description
          %td
            - if can? :read, post
              = link_to 'Show', post
          %td
            -if can? :edit, post
              = link_to 'Edit', edit_post_path(post)
          %td
            -if can? :destroy, post
              = link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br

