#comments
  %table
    %thead
      %tr
        %th User
        %th
        %th Body
        %th
        %th

    %tbody
      - @post.comments.each do |comment|
        %tr
          - if comment.persisted?
            %td= comment.user.full_name
            %td
            %td= comment.body
            %td
              -if can? :edit, comment
                = link_to 'Edit', edit_post_comment_path(post_id: comment.id, id: comment.id)
            %td
              -if can? :destroy, comment
                = link_to 'Destroy Comment', [@post, comment], method: :delete, data: { confirm: 'Are you sure?' }
