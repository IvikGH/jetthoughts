%h1 Listing users

%table
  %thead
    %tr
      %th ID
      %th Email
      %th Role
      %th ZIP

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.email
        %td= user.role
        %td= user.zip
        - if can? :manage, :all
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
