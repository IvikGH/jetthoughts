= form_for @user, url: update_profile_path do |f|

  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :zip
    = f.text_field :zip
  - if can? :manage, :all
    = f.label(:role_admin, "Admin")
    = f.radio_button(:role, :admin)
    %br
    = f.label(:role_moderator, "Moderator")
    = f.radio_button(:role, :moderator)
    %br
    = f.label(:role_user, "User")
    = f.radio_button(:role, :user)

  .actions
    = f.submit 'Save'
